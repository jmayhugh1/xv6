{
    "version": 4,
    "configurations": [
      {
        "name": "xv6-riscv",
        "compilerPath": "/opt/homebrew/bin/riscv64-unknown-elf-gcc",
        "cStandard": "gnu11",
        "cppStandard": "gnu++17",
        "intelliSenseMode": "gcc-x64",
  
        "includePath": [
          "${workspaceFolder}",
          "${workspaceFolder}/kernel",
          "${workspaceFolder}/user"
        ],
  
        "defines": [
          "KERNEL",
          "__riscv",
          "__riscv_xlen=64"
        ]
      }
    ]
  }
  