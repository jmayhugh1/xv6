{
    "version": 4,
    "configurations": [
      {
        "name": "xv6-riscv",
        "compilerPath": "/opt/homebrew/bin/riscv64-unknown-elf-gcc",
        "intelliSenseMode": "gcc-x64",
        "cStandard": "gnu11",
        "cppStandard": "gnu++17",
        "includePath": [
          "${workspaceFolder}",
          "${workspaceFolder}/kernel",
          "${workspaceFolder}/user"
        ],
        "defines": [
          "KERNEL"
        ],
        "compilerArgs": [
          "-I.",
          "-march=rv64gc",
          "-mcmodel=medany",
          "-ffreestanding",
          "-fno-common",
          "-nostdlib",
          "-fno-stack-protector",
          "-fno-pie",
          "-no-pie"
        ]
      }
    ]
  }
  