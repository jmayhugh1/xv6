{
  "version": 4,
  "configurations": [
    {
      "name": "macos-clang-arm64",
      "compilerPath": "/usr/bin/clang",
      "intelliSenseMode": "macos-clang-arm64",
      "cStandard": "${default}",
      "cppStandard": "${default}",
      "includePath": [
        "${workspaceFolder}/**"
      ],
      "defines": [
        "KERNEL"
      ],
      "compilerArgs": [
        "-I.",
        "-march=rv64gc",
        "-mcmodel=medany",
        "-ffreestanding",
        "-fno-common",
        "-nostdlib",
        "-fno-stack-protector",
        "-fno-pie",
        "-no-pie"
      ]
    }
  ]
}